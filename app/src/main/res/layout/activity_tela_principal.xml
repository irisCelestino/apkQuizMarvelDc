<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planodefundo"
    tools:context=".telaPrincipal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="43dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/anton"
        android:text="Bem Vindos"
        android:textAlignment="center"
        android:textColor="#F4F0F0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="333dp"
        android:layout_height="292dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/anton"
        android:text="MARVEL vs  DC"
        android:textAlignment="center"
        android:textColor="#F4F0F0"
        android:textSize="80sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnJogar"
        android:layout_width="202dp"
        android:layout_height="78dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#5E000000"
        android:fontFamily="@font/anton"
        android:text="Jogar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNomePlayer"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#F3EFEF"
        app:strokeWidth="2dp" />

    <EditText
        android:id="@+id/inputNomePlayer"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F8F5F5"
        android:ems="10"
        android:fontFamily="@font/anton"
        android:inputType="text"
        android:shadowColor="#F8F5F5"
        android:textColor="#DCEFE9E9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/anton"
        android:text="Digite seu nome :  "
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>