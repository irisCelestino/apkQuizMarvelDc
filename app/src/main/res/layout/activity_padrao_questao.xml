<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qtdQuestoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planodefundo"
    tools:context=".padraoQuestao">

    <TextView
        android:id="@+id/txtNomePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/anton"
        android:text="Jogador: ***********"
        android:textColor="#FBF8F8"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtScorePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/anton"
        android:text="Score: 00"
        android:textColor="#FBF8F8"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomePlayer" />

    <TextView
        android:id="@+id/txtQtdQuestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/anton"
        android:text="00/00"
        android:textColor="#FBF8F8"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/txtScorePlayer"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAnswer1"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 1"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:strokeColor="#000000"
        app:strokeWidth="6px" />

    <Button
        android:id="@+id/btnAnswer3"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 3"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer2"
        app:strokeColor="#000000"
        app:strokeWidth="6px" />

    <Button
        android:id="@+id/btnAnswer4"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 4"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer3"
        app:strokeColor="#000000"
        app:strokeWidth="6px" />

    <Button
        android:id="@+id/btnAnswer2"
        android:layout_width="339dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#BAFFFFFF"
        android:fontFamily="@font/anton"
        android:text="Opção 2"
        android:textAlignment="textStart"
        android:textColor="#0B0909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnswer1"
        app:strokeColor="#000000"
        app:strokeWidth="6px" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="347dp"
        android:layout_height="250dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomePlayer"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/tvQuestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/anton"
        android:text="QUESTÃO"
        android:textColor="#070606"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txtCampoPerguntas"
        android:layout_width="268dp"
        android:layout_height="121dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/anton"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#090808"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestao" />

</androidx.constraintlayout.widget.ConstraintLayout>